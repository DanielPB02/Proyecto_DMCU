    <ImageView
        android:id="@+id/fotoPlanta"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:src="@drawable/girasol" />

    <TextView
        android:id="@+id/nombrePlanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fotoPlanta"
        android:layout_toRightOf="@+id/fotoPlanta"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:textSize="22dp"
        android:textColor="#40800B"
        />

    <TextView
        android:id="@+id/textoPlanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombrePlanta"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-13dp"
        android:layout_toEndOf="@+id/fotoPlanta"
        android:layout_toRightOf="@+id/fotoPlanta"
        android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit rutrum primis vehicula sed class cum, viverra."
        android:textColor="#5CA122" />
</RelativeLayout>