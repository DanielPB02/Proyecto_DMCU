<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/login_screen">

    <TextView
        android:id="@+id/l_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:text="INICIA SESIÃ“N"
        android:textColor="#4CAF50" />


    <EditText
        android:id="@+id/tb_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_user"
        android:layout_marginStart="84dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:text="Usuario" />

    <EditText
        android:id="@+id/tb_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_login"
        android:layout_marginStart="84dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/darker_gray"
        tools:text="usuario" />

    <Button
        android:id="@+id/b_accept"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_below="@id/tb_pass"
        android:layout_marginStart="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:background="@color/colorPrimaryDark"
        android:text="Aceptar"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimarioTexto" />

    <Button
        android:id="@+id/b_signin"
        android:layout_width="270dp"
        android:layout_height="41dp"
        android:layout_marginStart="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="369dp"
        android:background="@color/colorSecundario"
        android:text="Crear cuenta de PlantFriends"
        android:textColor="@color/colorPrimarioTexto" />

    <include
        android:id="@+id/signin_screen"
        android:visibility="gone"
        layout="@layout/signin_screen"/>

</RelativeLayout>